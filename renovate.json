
  {
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "platform": "github",
    "baseBranch": "main",
    "dockerEnvFiles": [
      {
        "fileMatch": ["**/.env"],
        "commitMessagePrefix": "chore: update .env file"
      }
    ],
    "labels": ["docker-env", "renovate"],
    "prHourlyLimit": 3,
    "enabled": true
  }