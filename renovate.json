{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "prHourlyLimit": 4,

  "regexManagers": [
    {
      "fileMatch": [
        "(^|/)(?:docker-)?compose[^/]*\\.ya?ml$"
      ],
        "matchStrings": ["image: (?<depName>.*?):\\${(?:.*):?-(?<currentValue>.*?)}"],
        "datasourceTemplate": "docker"
    }
  ],

  "dockerfile": {
    "fileMatch": [
      "(^|/)(?:docker-)?compose[^/]*\\.ya?ml$"
    ],
    "pinDigests": true
  }
}
