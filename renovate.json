{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "prHourlyLimit": 4,

  "regexManagers": [
    {
        "fileMatch": ["^compose(.*).yml$"],
        "matchStrings": ["image: (?<depName>.*?):\\${(?:.*):?-(?<currentValue>.*?)}"],
        "datasourceTemplate": "docker"
    }
  ],

  "gitlabci": {
    "fileMatch": ["^compose(.*).yml$"],
    "pinDigests": true
  }
}
